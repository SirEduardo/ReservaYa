{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "lib": ["ES2021"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "rootDir": "src",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  